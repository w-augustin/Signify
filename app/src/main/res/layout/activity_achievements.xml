<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Test_knowledge">

    <View
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/bg_view"
        android:id="@+id/top_view"/>


    <TextView
        android:id="@+id/textView_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Achievements  "
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:alpha="0.8"
        android:text="Look at all your rewards"
        android:layout_centerHorizontal="true"

        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/textView"
        android:layout_width="348dp"
        android:layout_height="167dp"
        android:background="@color/blue"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@id/textView2"
        android:layout_centerHorizontal="true"
        android:gravity="">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_person_24"
            android:layout_marginEnd="10dp"
            />

        <TextView
            android:id="@+id/view3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lay="@+id/icon"
            android:layout_toRightOf="@+id/icon"
            android:text="User"
            android:textSize="15sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/view4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view3"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="50dp"
            android:alpha="0.5"
            android:text="Day5"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/view5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view4"
            android:layout_marginTop="2dp"
            android:paddingTop= "20dp"
            android:layout_marginLeft="50dp"
            android:text="Completed module 1"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <ProgressBar
            android:id="@+id/progressBar4"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_below="@+id/view5"
            android:padding="10dp"
            android:layout_centerInParent="true"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/custom_progress_bar"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="348dp"
        android:layout_height="167dp"
        android:background="@color/blue"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@id/textView"
        android:id="@+id/textRView2"
        android:layout_centerHorizontal="true"
        android:gravity="">

        <ImageView
            android:id="@+id/icon1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_person_24"
            android:layout_marginEnd="10dp"
            />

        <TextView
            android:id="@+id/view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lay="@+id/icon"
            android:layout_toRightOf="@+id/icon1"
            android:text="User"
            android:textSize="15sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_1"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="50dp"
            android:alpha="0.5"
            android:text="Day5"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/view_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_2"
            android:layout_marginTop="2dp"
            android:paddingTop= "20dp"
            android:layout_marginLeft="50dp"
            android:text="Completed module 2"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <ProgressBar
            android:id="@+id/progressBar5"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_below="@+id/view_3"
            android:padding="10dp"
            android:layout_centerInParent="true"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/custom_progress_bar"/>
    </RelativeLayout>




    <RelativeLayout
        android:layout_width="348dp"
        android:layout_height="167dp"
        android:background="@color/blue"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@id/textRView2"
        android:id="@+id/textRView3"
        android:layout_centerHorizontal="true"
        android:gravity="">

        <ImageView
            android:id="@+id/icon2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_person_24"
            android:layout_marginEnd="10dp"
            />

        <TextView
            android:id="@+id/view_r2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lay="@+id/icon"
            android:layout_toRightOf="@+id/icon2"
            android:text="User"
            android:textSize="15sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/view_r3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_r2"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="50dp"
            android:alpha="0.5"
            android:text="Day4"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/view_r4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_r3"
            android:layout_marginTop="2dp"
            android:paddingTop= "20dp"
            android:layout_marginLeft="50dp"
            android:text="Completed daily goal!"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <ProgressBar
            android:id="@+id/progressBar6"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_below="@+id/view_r4"
            android:padding="10dp"
            android:layout_centerInParent="true"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/custom_progress_bar"/>
    </RelativeLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:menu="@menu/nav_menu"
        tools:ignore="VisualLintBottomNav" />

</RelativeLayout>