<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".features.activitycenter.ActivityCenter">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:elevation="4dp"
        app:title="Activity Center"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@android:color/white" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/topAppBar"
        android:background="@android:color/white"
        android:layout_marginTop="4dp"/>

<!--    <View-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="120dp"-->
<!--        android:background="@drawable/bg_view"-->
<!--        android:id="@+id/top_view"/>-->


<!--    <TextView-->
<!--        android:id="@+id/textView"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:layout_marginTop="32dp"-->
<!--        android:text="Activity Center "-->
<!--        android:textColor="@color/white"-->
<!--        android:textSize="32sp"-->
<!--        android:textStyle="bold" />-->


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:alpha="0.8"
        android:text="Start your adventure into ASL"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />



    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:layout_marginBottom="60dp"
        android:progressDrawable="@drawable/custom_progress_bar"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/getStarted"
        android:backgroundTint="@color/primary_blue"
        android:text="START"
        android:layout_below="@id/textView2"
        android:visibility="visible"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_below="@id/textView2"
        android:layout_marginTop="27dp"
        android:backgroundTint="@color/primary_blue"
        android:text="act1" />

    <Button
        android:id="@+id/button3"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_below="@id/divider"
        android:layout_marginLeft="-12dp"
        android:layout_marginTop="122dp"
        android:layout_toRightOf="@id/button2"
        android:backgroundTint="@color/button_disabled"
        android:text="act2" />

    <Button
        android:id="@+id/button4"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_below="@id/divider"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="164dp"
        android:layout_toRightOf="@id/button3"
        android:backgroundTint="@color/button_disabled"
        android:text="act3" />

    <Button
        android:id="@+id/button5"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_below="@id/divider"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="220dp"
        android:layout_toRightOf="@id/button4"
        android:backgroundTint="@color/button_disabled"
        android:text="act4" />

    <Button
        android:id="@+id/button6"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_below="@id/divider"
        android:layout_marginTop="270dp"
        android:layout_marginRight="1dp"
        android:layout_toLeftOf="@id/button5"
        android:backgroundTint="@color/button_disabled"
        android:text="act5" />

    <Button
        android:id="@+id/button7"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_below="@id/divider"
        android:layout_marginTop="310dp"
        android:layout_marginRight="9dp"
        android:layout_toLeftOf="@id/button6"
        android:backgroundTint="@color/button_disabled"
        android:text="act6" />

    <Button
        android:id="@+id/button8"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_below="@id/divider"
        android:layout_marginTop="352dp"
        android:layout_marginRight="-4dp"
        android:layout_toLeftOf="@id/button7"
        android:backgroundTint="@color/button_disabled"
        android:visibility="invisible"
        android:text="act" />

    <Button
        android:id="@+id/button10"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_below="@id/divider"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="388dp"
        android:layout_toRightOf="@id/button7"
        android:backgroundTint="@color/button_disabled"
        android:text="act7" />

    <Button
        android:id="@+id/button11"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_below="@id/divider"
        android:layout_marginLeft="-4dp"
        android:layout_marginTop="450dp"
        android:layout_toRightOf="@id/button10"
        android:backgroundTint="@color/button_disabled"
        android:text="act8" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nextMod"
        android:layout_below="@id/button11"
        android:backgroundTint="@color/primary_blue"
        android:text="Continue to Next Module"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        />
</RelativeLayout>