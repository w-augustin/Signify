<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#220E6A"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/resources_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Videos and Resources"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/signify"
                android:layout_margin="8dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/signify"
                android:layout_margin="8dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/signify"
                android:layout_margin="8dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/signify"
                android:layout_margin="8dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/signify"
                android:layout_margin="8dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/signify"
                android:layout_margin="8dp"
                android:scaleType="centerCrop" />
        </GridLayout>

        <Button
            android:id="@+id/see_more_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="See More >"
            android:textSize="16sp"
            android:backgroundTint="@android:color/white"
            android:textColor="#220E6A"
            android:padding="10dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_rounded" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/white"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/link1_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="&lt; link 1 &gt;"
            android:textSize="14sp"
            android:backgroundTint="@android:color/white"
            android:textColor="#220E6A"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_rounded" />

        <Button
            android:id="@+id/link2_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="&lt; link 1 &gt;"
            android:textSize="14sp"
            android:backgroundTint="@android:color/white"
            android:textColor="#220E6A"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_rounded" />

        <Button
            android:id="@+id/link3_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="&lt; link 1 &gt;"
            android:textSize="14sp"
            android:backgroundTint="@android:color/white"
            android:textColor="#220E6A"
            android:padding="8dp"
            android:background="@drawable/button_rounded" />

    </LinearLayout>
</ScrollView>
