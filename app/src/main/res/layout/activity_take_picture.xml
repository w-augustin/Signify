<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F8F9FA"
    tools:context=".features.auth.MainActivity">

    <!-- Video View to display the recorded video -->
    <VideoView
        android:id="@+id/videoView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvRecognizedSign"
        android:layout_marginBottom="12dp"
        android:background="@android:color/darker_gray"
        android:elevation="4dp"/>

    <!-- Recognized Sign Text -->
    <TextView
        android:id="@+id/tvRecognizedSign"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Recognized Sign: "
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/videoView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Record Video Button -->
    <Button
        android:id="@+id/idBtnRecordVideo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Record Video"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:backgroundTint="#03A9F4"
        android:padding="12dp"
        android:layout_margin="10dp"
        android:elevation="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
