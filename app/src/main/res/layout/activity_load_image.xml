<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.auth.MainActivity">

    <!-- add Camera Button to open the Camera -->
    <Button
        android:id="@+id/load_image_button"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="90dp"
        android:layout_marginStart="230dp"
        android:text="load Image" />

    <EditText
        android:id="@+id/user_id_input"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Enter User ID"
        android:inputType="text"
        android:minHeight="48dp"
        android:layout_marginVertical="90dp"
        android:layout_marginStart="15dp"/>

    <!-- add ImageView to display the captured image -->
    <ImageView
        android:id="@+id/image_view"
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_marginVertical="160dp"
        android:layout_marginStart="15dp"/>

    <Button
        android:id="@+id/home"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="home"
        android:layout_marginVertical="600dp"
        android:layout_marginStart="150dp"/>

</RelativeLayout>