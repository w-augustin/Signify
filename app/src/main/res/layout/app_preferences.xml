                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white"
                app:strokeColor="@android:color/holo_red_dark"
                app:strokeWidth="2dp">

                <LinearLayout
